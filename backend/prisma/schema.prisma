generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  password      String
  name          String?
  role          Role
  createdAt     DateTime      @default(now())
  orders        Order[]
  reservations  Reservation[]
}

enum Role {
  ADMIN
  CLIENT
  LIVREUR
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  icon        String?
  createdAt   DateTime @default(now())
  dishes      Dish[]
}

model Dish {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  photo       String?
  available   Boolean  @default(true)
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  orderItems  OrderItem[]
}

model Table {
  id            Int           @id @default(autoincrement())
  name          String
  seats         Int
  available     Boolean       @default(true)
  positionX     Float?        // Position X dans le plan du restaurant (0-100)
  positionY     Float?        // Position Y dans le plan du restaurant (0-100)
  reservations  Reservation[]
}

model Reservation {
  id        Int      @id @default(autoincrement())
  name      String
  date      DateTime
  type      ReservationType
  status    ReservationStatus @default(PENDING)
  tableId   Int?
  table     Table?   @relation(fields: [tableId], references: [id])
  userId    Int?     // ID du client qui fait la réservation
  user      User?    @relation(fields: [userId], references: [id])
  guests    Int?     // Nombre de personnes
}

enum ReservationType {
  SUR_PLACE
  LIVRAISON
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Order {
  id          Int        @id @default(autoincrement())
  status      OrderStatus @default(PENDING)
  userId      Int?
  user        User?      @relation(fields: [userId], references: [id])
  total       Float?
  address     String?    // Adresse de livraison
  phone       String?    // Téléphone du client
  notes       String?    // Notes pour le livreur
  items       OrderItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
}

enum OrderStatus {
  PENDING
  ACCEPTED
  EN_COURS
  LIVREE
  CANCELLED
}

model OrderItem {
  id      Int   @id @default(autoincrement())
  orderId Int
  order   Order @relation(fields: [orderId], references: [id])
  dishId  Int
  dish    Dish  @relation(fields: [dishId], references: [id])
  qty     Int   @default(1)
}
